{
  "name": "one-time-link",
  "version": "0.0.1",
  "description": "A one time link app, with file hosting",
  "main": "server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=DEV ts-node-dev --respawn --pretty --transpile-only src/server.ts",
    "prebuild": "eslint . --ext .ts --fix",
    "build": "tsc",
    "dockerbuild": "tsc",
    "postbuild": "npm test",
    "pack": "tar --exclude='tests' --exclude='./tests' --exclude='./src' --exclude='./.git' --exclude='./one-time-link.tgz' -czf ../one-time-link.tgz  . && mv ../one-time-link.tgz .",
    "test": "cross-env NODE_ENV=TEST mocha -r ts-node/register src/**/*.spec.ts",
    "test:watch": "cross-env NODE_ENV=TEST mocha -r ts-node/register src/**/*.spec.ts --watch",
    "test:cov": "cross-env NODE_ENV=TEST nyc --reporter=text mocha -r ts-node/register src/**/*.spec.ts",
    "start": "cross-env NODE_ENV=DEV node dist/server.js",
    "start:production": "cross-env NODE_ENV=PROD pm2 start --env production --watch"
  },
  "author": "Vincent LE DÃ›",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "@types/sinon": "^10.0.11",
    "@types/sinon-chai": "^3.2.8",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "esm": "^3.2.25",
    "mocha": "^9.2.1",
    "node-mocks-http": "^1.11.0",
    "nyc": "^15.1.0",
    "sinon": "^13.0.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.2.2",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@types/mysql": "^2.15.21",
    "@types/verror": "^1.10.5",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.3",
    "express-validator": "^6.14.0",
    "knex": "^1.0.4",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.15",
    "pm2": "^5.2.0",
    "uuid": "^8.3.2",
    "verror": "^1.10.1",
    "winston": "^3.6.0"
  }
}
